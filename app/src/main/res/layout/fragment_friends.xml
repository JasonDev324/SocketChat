<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/base_theme_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin_15dp"
            android:text="联系人"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_17dp" />

    </RelativeLayout>


    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@color/color_white"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNewFriend"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_new_friend"
            android:gravity="center"
            android:paddingTop="11dp"
            android:text="新朋友"
            android:textColor="@color/text_color_black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tvGroupChat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_group_chat"
            android:gravity="center"
            android:paddingTop="11dp"
            android:text="群聊"
            android:textColor="@color/text_color_black"
            android:textSize="12dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_10dp"
        android:background="@color/color_transparent" />

    <com.liaoinstan.springview.widget.SpringView
        android:id="@+id/springView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base_background_color">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:visibility="visible" />

    </com.liaoinstan.springview.widget.SpringView>

</LinearLayout>